{
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "jq -r '.tool_input.file_path' | { read f; case \"$f\" in *.php) php -l \"$f\" 2>&1 | head -5 ;; *.py) python -m py_compile \"$f\" 2>&1 ;; esac; }"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "jq -r '.tool_input.file_path' | grep -qE '(\\.env|composer\\.lock|package-lock\\.json|\\.git/)' && exit 2 || exit 0"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "echo 'âœ… Claude finished' | head -c 50"
          }
        ]
      }
    ]
  }
}
